{
    "manifest_version": 3,
    "name": "Easy Scripting Test",
    "version": "1.0",
    "description": "Add Simple Popup to chrome with a button and scripting",
    "permissions": ["activeTab", "scripting"],

    "background": {
        "service_worker": "background.js"
    },
    "action": {
        
        "default_popup": "/popup/popup.html"
    },  
    
    "icons": {

    },

    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://*/*",
            "http://google.com/*"
          ]
        }
      ]

}
  